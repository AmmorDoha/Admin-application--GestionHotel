<Window x:Class="AdminApplication.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotel Management Login" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F0F0">
        <StackPanel VerticalAlignment="Center" Margin="40">
            <!-- Header -->
            <TextBlock Text="HOTEL MANAGEMENT" 
                       HorizontalAlignment="Center" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Margin="0,0,0,40"/>

            <!-- Username -->
            <TextBlock Text="Username" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" 
                     Height="40" 
                     Padding="5"
                     Margin="0,0,0,20"/>

            <!-- Password -->
            <TextBlock Text="Password" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" 
                        Height="40" 
                        Padding="5"
                        Margin="0,0,0,30"/>

            <!-- Login Button -->
            <Button Content="LOGIN" 
                    Click="LoginButton_Click"
                    Height="40"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"/>

            <!-- Error Message -->
            <TextBlock x:Name="ErrorMessage"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>